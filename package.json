{
  "private": true,
  "scripts": {
    "clean": "rm -rfv client/out/* server/out/*",
    "compile": "tsc -b",
    "compile:force": "yarn clean && yarn compile --verbose --force",
    "watch": "tsc -b -w",
    "postinstall": "cd client && yarn && cd ../server && yarn && cd ..",
    "test": "jest",
    "test:server": "jest server/tests",
    "test:ci": "jest --runInBand",
    "check:types": "tsc --noEmit -p server/tsconfig.json"
  },
  "devDependencies": {
    "@types/jest": "27.0.1",
    "@types/node": "^12.12.0",
    "jest": "27.1.1",
    "prettier": "2.3.2",
    "ts-jest": "27.0.5",
    "typescript": "^4.3.2"
  },
  "dependencies": {}
}
